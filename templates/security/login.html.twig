{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}


    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputUsername" class="m-2">Username</label>
    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control m-2" autocomplete="username" required autofocus>
    <label for="inputPassword" class="m-2">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control m-2" autocomplete="current-password" required>

    <input type="hidden"  name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
    >

    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
    <a class="m-5" href="{{ path('registration') }}">Don't have account? Login</a>
    <button class="btn btn-primary float-end m-3" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
